{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "baseUrl": "src",
    "lib": [
      "es6",
      "dom",
      "esnext"
    ],
    "paths": {
      "controllers/*": [
        "controllers/*"
      ],
      "routes/*": [
        "routes/*"
      ],
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ]
}
